{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/productos", "destination": "/api/productos.js" },
    { "source": "/api/productos/:id", "destination": "/api/productos/[id].js" },
    { "source": "/api/mesas", "destination": "/api/mesas.js" },
    { "source": "/api/mesas/:id", "destination": "/api/mesas/[id].js" },
    { "source": "/api/pedidos", "destination": "/api/pedidos.js" },
    { "source": "/api/pedidos/:id", "destination": "/api/pedidos/[id].js" },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}